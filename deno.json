{
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "hono": "npm:hono@^4.6.14"
  },
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false

  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
